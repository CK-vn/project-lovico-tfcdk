  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Terraform CDK TypeScript",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "/usr/local/bin/cdktf",
      "cwd": "${workspaceFolder}",
      "args": ["synth", "--app node_modules/cdktf/lib/app.js"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}